# ============================================================================
# Kanokna Microservices - Shared Environment Variables
# ============================================================================
# MODULE_CONTRACT: MC-infra-docker-compose
#
# These variables are used by all microservices when running locally.
# Import this file alongside .env for full configuration.
#
# Links:
#   - DevelopmentPlan.xml#DP-INFRA-docker-compose
# ============================================================================

# ─────────────────────────────────────────────────────────────────────────────
# Spring Profiles
# ─────────────────────────────────────────────────────────────────────────────
SPRING_PROFILES_ACTIVE=dev

# ─────────────────────────────────────────────────────────────────────────────
# Config Server
# ─────────────────────────────────────────────────────────────────────────────
CONFIG_SERVER_URL=http://localhost:8888
CONFIG_SERVER_USER=configadmin
CONFIG_SERVER_PASSWORD=configsecret

# ─────────────────────────────────────────────────────────────────────────────
# Database Connection (PostgreSQL)
# ─────────────────────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=kanokna
DB_PASSWORD=kanokna_secret

# ─────────────────────────────────────────────────────────────────────────────
# Kafka Connection
# ─────────────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ─────────────────────────────────────────────────────────────────────────────
# Redis Connection
# ─────────────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ─────────────────────────────────────────────────────────────────────────────
# Elasticsearch Connection
# ─────────────────────────────────────────────────────────────────────────────
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# ─────────────────────────────────────────────────────────────────────────────
# Keycloak / OAuth2
# ─────────────────────────────────────────────────────────────────────────────
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=kanokna
KEYCLOAK_CLIENT_ID=kanokna-api
KEYCLOAK_CLIENT_SECRET=change-me-in-production

# ─────────────────────────────────────────────────────────────────────────────
# MinIO / S3
# ─────────────────────────────────────────────────────────────────────────────
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET_MEDIA=media
S3_BUCKET_DOCUMENTS=documents
S3_BUCKET_UPLOADS=uploads

# ─────────────────────────────────────────────────────────────────────────────
# Encryption
# ─────────────────────────────────────────────────────────────────────────────
ENCRYPT_KEY=kanokna-dev-encrypt-key-change-in-prod

# ─────────────────────────────────────────────────────────────────────────────
# Observability
# ─────────────────────────────────────────────────────────────────────────────
LOKI_URL=http://localhost:3100
